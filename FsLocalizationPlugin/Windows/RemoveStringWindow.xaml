<ctrl:FrostyDockableWindow x:Class="FsLocalizationPlugin.Windows.RemoveStringWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FsLocalizationPlugin.Windows"
        xmlns:core="clr-namespace:Frosty.Core;assembly=FrostyCore"
        xmlns:ctrl="clr-namespace:Frosty.Controls;assembly=FrostyControls"
        xmlns:fdev="FrostyDeveloper"
        mc:Ignorable="d"
        UseLayoutRounding="True"
        Title="Remove String - Flammenwerfer" SizeToContent="Height" MaxHeight="850" Width="400"
        x:Name="removeStringWindow"
        WindowStartupLocation="CenterOwner"
        >

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/FrostyControls;component/Themes/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Background="{StaticResource WindowBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="{StaticResource ListBackground}"/>
        <Grid x:Name="MainGrid" Visibility="Visible" Grid.Row="0" Margin="5, 10, 5, 10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Margin="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Label Width="Auto" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch">
                    <Label.Content>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Margin="0, 1, 5, 0" Text="&#xE7BA;" 
                                       FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets" FontSize="14"
                                       RenderOptions.BitmapScalingMode="HighQuality"/>
                            <TextBlock Grid.Column="1" Foreground="{StaticResource FontColor}" TextWrapping="Wrap" Text="Removed strings cannot be reverted. You need to revert the whole database to get them back. This is a experimental function."/>
                        </Grid>
                    </Label.Content>
                </Label>
            </Grid>
            <WrapPanel Grid.Row="1" Orientation="Horizontal" Margin="3">
                <Label Width="Auto">
                    <Label.Content>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Margin="0, 1, 5, 0" Text="&#xF2B7;" 
                                       FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets" FontSize="14"
                                       RenderOptions.BitmapScalingMode="HighQuality"/>
                            <TextBlock Foreground="{StaticResource FontColor}" Text="Language: "/>
                        </StackPanel>
                    </Label.Content>
                </Label>
                <ComboBox x:Name="LanguageComboBox" MinWidth="140" Width="Auto" Margin="2">
                </ComboBox>
            </WrapPanel>
            <WrapPanel Grid.Row="2" Orientation="Horizontal" Margin="3">
                <Label Width="Auto">
                    <Label.Content>
                        <StackPanel Orientation="Horizontal">
                            <Image Margin="0, 2, 5, 0" Width="14" Source="/FsLocalizationPlugin;component/Images/tag_32dp_FFFFFF_FILL0_wght500_GRAD0_opsz40.png"
                                RenderOptions.BitmapScalingMode="HighQuality"/>
                            <TextBlock Foreground="{StaticResource FontColor}" Text="Hash or ID: "/>
                        </StackPanel>
                    </Label.Content>
                </Label>
                <TextBox Padding="2.5" Margin="2" Width="Auto" MinWidth="100"
                    BorderThickness="1"
                    Text="{Binding HashOrId, RelativeSource={RelativeSource AncestorType=Window}, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                    AcceptsTab="False"
                    AcceptsReturn="False"
                    AutoWordSelection="False"
                    VerticalScrollBarVisibility="Disabled" 
                    HorizontalScrollBarVisibility="Disabled"
                    >
                </TextBox>
                <TextBox Padding="2.5" Margin="2" Width="Auto"
                    BorderThickness="1"
                    Text="{Binding IdToHash, RelativeSource={RelativeSource AncestorType=Window}, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
                    AcceptsTab="False"
                    AcceptsReturn="False"
                    AutoWordSelection="False"
                    VerticalScrollBarVisibility="Disabled" 
                    HorizontalScrollBarVisibility="Disabled"
                         IsReadOnly="True"
                    >
                    <TextBox.Style>
                        <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource {x:Type TextBox}}">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ShowIdToHash, RelativeSource={RelativeSource AncestorType=Window}, UpdateSourceTrigger=PropertyChanged}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>
            </WrapPanel>

            <Grid Grid.Row="3" Margin="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Width="Auto">
                    <Label.Content>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Margin="0, 1, 5, 0" Text="&#xE7B3;" 
           FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets" FontSize="14"
           RenderOptions.BitmapScalingMode="HighQuality"/>
                            <TextBlock Foreground="{StaticResource FontColor}" Text="Preview: "/>
                        </StackPanel>
                    </Label.Content>
                </Label>

                <TextBox x:Name="PreviewTextBox" Grid.Row="1" Padding="2.5" Margin="5, 2, 5, 2" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                    BorderThickness="1" BorderBrush="{Binding PreviewTextBoxBorderBrush, RelativeSource={RelativeSource AncestorType=Window}, UpdateSourceTrigger=PropertyChanged}"
                    Text="{Binding StringValue, RelativeSource={RelativeSource AncestorType=Window}, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
                    VerticalScrollBarVisibility="Auto"
                    HorizontalScrollBarVisibility="Auto"
                    TextWrapping="Wrap"
                    IsReadOnly="True"/>
            </Grid>
        </Grid>

        <Grid Grid.Row="1" Height="38">
            <Grid Margin="5">
                <DockPanel LastChildFill="False">
                    <Button x:Name="CancelButton" Padding="6, 3, 6, 3" Margin="3" DockPanel.Dock="Left" Width="Auto" Click="CancelButton_Click">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <Image Margin="0, 1, 5, 0" Width="14" Source="/FrostyControls;component/Images/Clear.png"
                                   RenderOptions.BitmapScalingMode="HighQuality"/>
                                <TextBlock Foreground="{StaticResource FontColor}" Text="Exit"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>

                    <Button x:Name="ConfirmButton" Padding="6, 3, 6, 3" Margin="3" DockPanel.Dock="Right" Width="Auto" Click="ConfirmButton_Click" 
                            IsEnabled="{Binding CanRemove}">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <Image Margin="0, 1, 5, 0" Width="14" Source="/FrostyEditor;component/Images/Remove.png"
                                   RenderOptions.BitmapScalingMode="HighQuality"/>
                                <TextBlock Foreground="{StaticResource FontColor}" Text="Remove"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>

                </DockPanel>
            </Grid>
        </Grid>

    </Grid>
</ctrl:FrostyDockableWindow>
